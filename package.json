{
  "name": "neverbuild",
  "version": "0.1.0",
  "license": "MIT",
  "lint-staged": {
    "*.{js, scss}": ["prettier --single-quote --write", "git add"]
  },
  "scripts": {
    "start": "razzle start",
    "build": "razzle build",
    "test": "razzle test --env=jsdom",
    "start:prod": "NODE_ENV=production node build/server.js",
    "svg:pretty":
      "find src/images -name '*.svg' -type f -exec svgo --pretty --indent=2 '{}' \\;",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "express": "^4.16.2",
    "raf": "^3.4.0",
    "razzle": "^0.8.6",
    "react": "^16.1.1",
    "react-dom": "^16.1.1",
    "react-router-dom": "^4.2.2",
    "svg-sprite-loader": "^3.5.2",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^18.0.0",
    "stylelint-order": "^0.8.0",
    "stylelint-scss": "^2.1.0"
  },
  "devDependencies": {
    "svgo": "^0.7.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.1.3"
  }
}
